{
	"compilerOptions": {
		"target": "ES2020",                            // align with modern JS output
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"declaration": true,
		"outDir": "./dist/",
		"rootDir": ".",                                // makes it clean when compiling
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"skipLibCheck": true,
		"incremental": true,
		"sourceMap": true
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}